#!/bin/sh

campaign_id=

case x$1 in
x--campaign_id=*) campaign_id=`echo $1 | sed -e 's/.*=//'`; shift;;
esac

ds=`date +%Y%m%d_%H%M%S`
outdir="$HOME/private/logs/poms/launches/campaign_$campaign_id"
outfile="$outdir/$ds"
mkdir -p $outdir
url="http://127.0.0.1:8080/poms/launch_jobs?campaign_id=$campaign_id"

wget --timeout=0 -o outfile.log -O "$outfile" "$url"

curl -F myFile=@"$outfile" -F "campaign_id=$campaign_id" http://127.0.0.1:8080/poms/upload

