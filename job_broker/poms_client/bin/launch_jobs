#!/usr/bin/env python

from poms_client import launch_jobs
import optparse
import os

import logging
logging.basicConfig(level=logging.INFO)

parser = optparse.OptionParser(usage="usage: %prog [options] \n launch a submission of jobs for campaign")
parser.add_option('--verbose', '-v', action='count')
parser.add_option('--campaign', help="campaign id", default = None)
groupArg.add_argument('--experiment', metavar='Experiment', type=str, help='The experiment this submission is for, needed if giving campaign name rather than id')
parser.add_option('--test',  help="use test server", default = None)

(options, args ) = parser.parse_args()
if options.verbose:
    logging.getLogger().setLevel(logging.DEBUG)

res = launch_jobs(campaign = options.campaign, 
        experiment = options.experiment,
	test = options.test)

print res
